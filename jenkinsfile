pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ops86199/pratice.git'
            }
        }

        stage('Build docker image') {
            steps {
                sh '''
                docker build -t myapp:v0.0.1 .
                '''
            }
        }

        stage('Run container') {
            steps {
                sh '''
                docker run --name jarvish -d -p 8080:80 myapp:v0.0.1
                '''
            }
        }

    }
}
