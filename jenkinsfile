pipeline {
    agent any 

    // environment {
    //     RECIPIENT = "mrswain0806@gmail.com"
    // }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ops86199/pratice.git'
            }
        }

        stage('Maven Build') {
            steps {
                sh '''
                mvn clean package
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                docker rmi -f myapp:v0.1.1 || true
                docker build -t myapp:v0.1.1 .
                '''
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker rm -f pream || true'
                sh 'docker run --name pream -d -p 8083:8080 myapp:v0.1.1'
                
            }
        }

        stage('Docker push') {   
            steps{
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')]) {
                    sh '''
                    echo $DOCKERHUB_PASSWORD | docker login -u $DOCKERHUB_USERNAME --password-stdin
                    docker tag myapp:v0.1.1 ops86199/myapp:v0.1.1
                    docker push ops86199/myapp:v0.1.1  
                    '''
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshagent(['ec2-ssh']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ec2-user@54.242.11.19 "
                    docker pull ops86199/myapp:v0.1.1 &&
                    docker stop app || true &&
                    docker rm app || true &&
                    docker run -d --name app -p 8084:8080 ops86199/myapp:v0.1.1
                    "
                    '''
                }
            }
        }

        // stage('Upload to S3') {
        //     steps {
        //         withCredentials([usernamePassword(credentialsId: 'aws-creds', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
        //             sh 'aws s3 cp target/*.jar s3://omprakashs3bucket0.1/'
        //         }
        //     }
        // }

    }

    // post {
    //     success {
    //         emailext(
    //             to: "${env.RECIPIENT}",
    //             subject: "Jenkins Job Success - Web01 ${env.JOB_NAME} #${env.BUILD_NUMBER}",
    //             body: "The Jenkins job has completed successfully."
    //         )
    //     }
    //     failure {
    //         emailext(
    //             to: "${env.RECIPIENT}",
    //             subject: "Jenkins Job Failure - Web01 ${env.JOB_NAME} #${env.BUILD_NUMBER}",
    //             body: "Build failed. Check console: ${env.BUILD_URL}console"
    //         )
    //     }
    // }
}
